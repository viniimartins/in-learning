{
  "extends": "@in-learning/tsconfig/node.json",
  "include": [
    "src/**/*",
  ],
  "rootDirs": [
    "src",
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@infra/*": [
        "infra/*"
      ],
      "@container/*": [
        "container/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
    }
  }
}